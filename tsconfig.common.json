{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/common",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "exclude": [
    "./src/client",
    "./src/server"
  ]
}
